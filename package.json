{
  "name": "bountyexpo",
  "main": "index.js",
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint \"app/**/*.{js,jsx,ts,tsx}\" \"lib/**/*.{js,jsx,ts,tsx}\" --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/node_modules/**\"",
    "lint:a11y": "eslint app/**/*.{tsx,jsx} components/**/*.{tsx,jsx}",
    "a11y-audit": "node scripts/a11y-audit.js",
    "test:a11y": "jest __tests__/accessibility",
    "api": "node api/server.js",
    "payments:server": "node server/index.js",
    "test:payments:device": "echo \"Start the payments server and set EXPO_PUBLIC_API_BASE_URL to http://<LAN_IP>:3001 (e.g. http://192.168.0.59:3001)\" && npm run payments:server",
    "db:init": "node scripts/init-db.js",
    "test": "jest",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:e2e": "jest __tests__/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:verbose": "jest --verbose",
    "test:api": "node scripts/test-api.js",
    "test:auth": "node scripts/test-auth-endpoints.js",
    "test:load:baseline": "k6 run tests/load/baseline-test.js",
    "test:load:bounty-flow": "k6 run tests/load/bounty-flow.js",
    "test:load:spike": "k6 run tests/load/spike-test.js",
    "test:load:stress": "k6 run tests/load/stress-test.js",
    "test:load:mixed": "k6 run tests/load/mixed-scenario.js",
    "test:load:auth": "k6 run tests/load/auth-flow.js",
    "test:load:all": "npm run test:load:baseline; npm run test:load:bounty-flow; npm run test:load:spike",
    "build": "npm run build --workspace=packages/domain-types && npm run build --workspace=packages/api-client && npm run build --workspace=services/api",
    "dev": "docker compose up -d postgres stripe-mock && echo 'ðŸš€ BountyExpo infrastructure started!' && echo 'ðŸ“Š Services available:' && echo '  - PostgreSQL: localhost:5432' && echo '  - Stripe Mock: http://localhost:12111' && echo '' && echo 'ðŸ“± To start the API server, run: pnpm dev:api' && echo 'ðŸ“± To start the Expo app, run: pnpm start'",
    "dev:stop": "docker compose down",
    "dev:logs": "docker compose logs -f",
    "dev:api": "pnpm --filter @bountyexpo/api dev",
    "analyze:slow-queries": "node scripts/analyze-slow-queries.js",
    "analyze:db-performance": "node scripts/analyze-database-performance.js",
    "measure:performance": "node scripts/measure-performance.js",
    "dev:serve": "node server/index.js",
    "dev:tunnel": "npx localtunnel --port 3001",
    "dev:all": "npx concurrently \"npm:dev:serve\" \"npx expo start --lan\"",
    "type-check": "npm run type-check --workspaces",
    "audit:deps": "npx depcheck || true",
    "bundle:visualize": "react-native-bundle-visualizer",
    "bundle:size-check": "node ./scripts/check-bundle-size.js"
  },
