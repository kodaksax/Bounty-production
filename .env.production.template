# ===========================================
# BountyExpo PRODUCTION Environment Configuration
# ===========================================
# IMPORTANT: This is a template for production deployment
# Copy this file and fill in your PRODUCTION values
# NEVER commit actual production secrets to version control!

# -----------------------------------------
# Database Configuration (PRODUCTION)
# -----------------------------------------
# PostgreSQL connection string for production database
# Use managed service like AWS RDS, Heroku Postgres, or DigitalOcean
DATABASE_URL="postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@production-host:5432/bountyexpo_prod"

# -----------------------------------------
# Supabase Configuration (PRODUCTION)
# -----------------------------------------
# Your PRODUCTION Supabase project
SUPABASE_URL="https://your-production-project.supabase.co"
SUPABASE_ANON_KEY="your-production-anon-key"
SUPABASE_JWT_SECRET="your-production-jwt-secret"
SUPABASE_SERVICE_ROLE_KEY="your-production-service-role-key"

# -----------------------------------------
# Stripe Configuration (PRODUCTION - LIVE KEYS)
# -----------------------------------------
# ⚠️ CRITICAL: Use LIVE keys (sk_live_..., pk_live_...) for production
# Never expose live secret keys in client-side code!
STRIPE_SECRET_KEY="sk_live_YOUR_LIVE_SECRET_KEY"
STRIPE_PUBLISHABLE_KEY="pk_live_YOUR_LIVE_PUBLISHABLE_KEY"

# Stripe webhook endpoint secret for production webhooks
# Create at: https://dashboard.stripe.com/webhooks
# Point to: https://yourdomain.com/webhooks/stripe
STRIPE_WEBHOOK_SECRET="whsec_YOUR_PRODUCTION_WEBHOOK_SECRET"

# -----------------------------------------
# API Server Configuration (PRODUCTION)
# -----------------------------------------
PORT=3001
HOST=0.0.0.0
NODE_ENV=production

# -----------------------------------------
# Core API Configuration (PRODUCTION)
# -----------------------------------------
# Production API Base URL - your actual domain
API_BASE_URL="https://api.bountyfinder.app"
API_TIMEOUT=30000

# -----------------------------------------
# JWT Configuration (PRODUCTION)
# -----------------------------------------
# Generate a strong random secret for production
# Use: openssl rand -base64 64
JWT_SECRET="GENERATE_A_LONG_RANDOM_SECRET_FOR_PRODUCTION"
JWT_EXPIRES_IN="1h"
REFRESH_TOKEN_EXPIRES_IN="7d"

# -----------------------------------------
# React Native / Expo Configuration (PRODUCTION)
# -----------------------------------------
# Public API URL accessible from mobile app
EXPO_PUBLIC_API_URL="https://api.bountyfinder.app"

# Public Stripe key for mobile payments (LIVE KEY)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_YOUR_LIVE_PUBLISHABLE_KEY"

# Supabase client configuration (PRODUCTION)
EXPO_PUBLIC_SUPABASE_URL="https://your-production-project.supabase.co"
EXPO_PUBLIC_SUPABASE_ANON_KEY="your-production-anon-key"

# -----------------------------------------
# Analytics & Monitoring (PRODUCTION)
# -----------------------------------------
# Mixpanel production project token
MIXPANEL_TOKEN="YOUR_PRODUCTION_MIXPANEL_TOKEN"
EXPO_PUBLIC_MIXPANEL_TOKEN="YOUR_PRODUCTION_MIXPANEL_TOKEN"

# Sentry production DSN
SENTRY_DSN="YOUR_PRODUCTION_SENTRY_DSN"
EXPO_PUBLIC_SENTRY_DSN="YOUR_PRODUCTION_SENTRY_DSN"

# Disable debug mode in production
EXPO_PUBLIC_SENTRY_DEBUG=false
SENTRY_DEBUG=false

# -----------------------------------------
# Google Places API (PRODUCTION)
# -----------------------------------------
# Google Places API key with platform restrictions
# IMPORTANT: Restrict to your production app bundle IDs and domain
EXPO_PUBLIC_GOOGLE_PLACES_API_KEY="YOUR_PRODUCTION_GOOGLE_PLACES_API_KEY"

# -----------------------------------------
# Apple Pay (PRODUCTION)
# -----------------------------------------
# Your registered Apple Pay Merchant ID from Apple Developer portal
EXPO_PUBLIC_APPLE_PAY_MERCHANT_ID="merchant.com.bounty.BOUNTYExpo"

# -----------------------------------------
# Production Settings
# -----------------------------------------
DEBUG=false
LOG_LEVEL="error"

# ===========================================
# DEPLOYMENT CHECKLIST
# ===========================================
# Before deploying to production, ensure:
# 
# ✅ All LIVE Stripe keys are configured
# ✅ Production Supabase project is set up with proper RLS policies
# ✅ Database backups are configured
# ✅ SSL/TLS certificates are valid
# ✅ API rate limiting is enabled
# ✅ Sentry is configured for error tracking
# ✅ Mixpanel is set up for analytics
# ✅ Google Places API key has platform restrictions
# ✅ Environment variables are set in hosting platform
# ✅ .env files are NOT committed to version control
# ✅ Privacy policy is accessible at configured URL
# ✅ Terms of service is accessible at configured URL
