{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@bountyexpo/domain-types": [
        "../domain-types/src/index.ts"
      ],
      "@bountyexpo/domain-types/*": [
        "../domain-types/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "examples"
  ],
  "references": [
    {
      "path": "../domain-types"
    }
  ]
}