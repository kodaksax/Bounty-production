{
  "name": "@bountyexpo/api",
  "version": "1.0.0",
  "description": "API service for BountyExpo",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "tsx src/test.ts",
    "test:payment-flow": "tsx src/test-end-to-end-payment-flow.ts",
    "test:escrow": "tsx src/test-escrow.ts",
    "test:complete-flow": "tsx src/test-complete-payment-flow.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "@bountyexpo/domain-types": "file:../../packages/domain-types",
    "@fastify/websocket": "^10.0.1",
    "@sentry/node": "^10.25.0",
    "@supabase/supabase-js": "^2.38.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "expo-server-sdk": "^4.0.0",
    "fastify": "^4.24.3",
    "mixpanel": "^0.19.0",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "stripe": "^18.5.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.8.10",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.6.0",
    "typescript": "~5.9.2"
  }
}
