# Database
DATABASE_URL="postgresql://username:password@localhost:5432/bountyexpo"

# Redis (standalone â€“ used for local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=bountyexpo:
REDIS_ENABLED=true
REDIS_TTL_PROFILE=300
REDIS_TTL_BOUNTY=180
REDIS_TTL_BOUNTY_LIST=60

# Redis Cluster (production)
# Set REDIS_CLUSTER_ENABLED=true to connect to a Redis Cluster instead of a
# single standalone node.  REDIS_CLUSTER_NODES is a comma-separated list of
# seed node addresses in host:port format.  The client will auto-discover the
# rest of the cluster topology from these seed nodes.
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=redis-cluster-1:6379,redis-cluster-2:6380,redis-cluster-3:6381

# Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# OpenTelemetry / APM Monitoring
OTEL_ENABLED=true
OTEL_SERVICE_NAME=bountyexpo-api
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
# OTEL_EXPORTER_OTLP_HEADERS={"api-key":"your-api-key"}  # Optional: for authenticated endpoints
# Alternative: Use OTEL_ENDPOINT for shorter config
# OTEL_ENDPOINT=http://localhost:4318/v1/traces

# Monitoring Notes:
# - For local development, use Jaeger (docker run -d -p 4318:4318 jaegertracing/all-in-one:latest)
# - For production, use Datadog, New Relic, or Honeycomb
# - Datadog: OTEL_EXPORTER_OTLP_ENDPOINT=https://api.datadoghq.com/v1/traces
# - New Relic: OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.nr-data.net:4318/v1/traces
# - Set OTEL_ENABLED=false to disable APM monitoring
