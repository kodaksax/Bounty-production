{
  "expo": {
    "name": "BOUNTY",
    "slug": "BOUNTYExpo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/brandmark-design (3).png",
    "scheme": "bountyexpo-workspace",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "privacy": "public",
    "privacyManifests": {
      "NSPrivacyAccessedAPITypes": []
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bounty.BOUNTYExpo",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "BOUNTY needs access to your photo library to let you choose a profile picture, attach images to posts,and add portfolio media.",
        "NSPhotoLibraryAddUsageDescription": "BOUNTY saves selected images to your library when needed."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/bounty-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "app.bountyfinder.BOUNTYExpo",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "description": "BOUNTY - Fast and safe micro-bounty marketplace. Create tasks, find hunters, coordinate via chat, and settle payments securely with escrow protection.",
    "primaryColor": "#10b981",
    "backgroundColor": "#ffffff",
    "privacyPolicyUrl": "https://bountyfinder.app/legal/privacy",
    "termsOfServiceUrl": "https://bountyfinder.app/legal/terms",
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.bountyexpo-workspace"
        }
      ],
      [
        "@react-native-google-signin/google-signin"
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/bounty-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/bounty-icon.png",
          "color": "#10b981",
          "sounds": [
            "./assets/sounds/notification.wav"
          ]
        }
      ],
      "expo-secure-store",
      "expo-web-browser",
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "react-native",
          "organization": "bounty-4e"
        }
      ],
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "API_BASE_URL": "https://bountyfinder.app",
      "googlePlacesApiKey": "${EXPO_PUBLIC_GOOGLE_PLACES_API_KEY}",
      "router": {},
      "eas": {
        "projectId": "b5485f88-0b1f-4622-bbed-b1ae142dcb46"
      }
    }
  }
}
