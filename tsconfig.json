{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext", "ES2020"],
    "types": ["node", "jest"],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "components/*"
      ],
      "@bountyexpo/domain-types": [
        "packages/domain-types/src/index.ts"
      ],
      "@bountyexpo/domain-types/*": [
        "packages/domain-types/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/.history/**",
    "**/.git/**",
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
