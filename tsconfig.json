{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "components/*"
      ],
      "@bountyexpo/domain-types": [
        "packages/domain-types/src/index.ts"
      ],
      "@bountyexpo/domain-types/*": [
        "packages/domain-types/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
