{
  "extends": "./node_modules/expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],

    "paths": {
      "@/*": [
        "components/*"
      ],
      "@bountyexpo/domain-types": [
        "packages/domain-types/src/index.ts"
      ],
      "@bountyexpo/domain-types/*": [
        "packages/domain-types/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
  ,
  "exclude": [
    "node_modules",
    "**/.history/**",
    "**/.git/**",
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
